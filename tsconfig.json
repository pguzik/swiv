{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "es6", "es5"],
    "types": ["node", "express", "mocha", "webpack-env"]
  }
}